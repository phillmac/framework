    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",        
        "mockery/mockery": "^1.2",
        "victorjonsson/markdowndocs": "^1.3"
    },
    "autoload": {
        "files" : [
            "src/defines.php"
