    "require": {
        "php": "^8.0",
        "rockettheme/toolbox": "^1.5",
        "illuminate/support": "^8.5",
        "illuminate/filesystem": "^8.5",
        "illuminate/config": "^8.5",
        "illuminate/session": "^8.5",
        "illuminate/cache": "^8.5",
        "illuminate/container": "^8.5",
        "illuminate/redis": "^8.5",
