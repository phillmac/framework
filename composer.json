    "keywords": ["userfrosting", "Framework"],
    "homepage": "https://github.com/userfrosting/framework",
    "license" : "MIT",
    "authors" : [
        {
            "name": "Alexander Weissman",
            "homepage": "https://alexanderweissman.com"
        },
        {
            "name": "Louis Charette",
